package wiprotraining;

public class hello {

    public static void main(String[] args) {
        String firstName = "Anshita";
        String lastName = "Sharma";
        long mobileNumber = 9368603153L;
        int age = 22;

        
        System.out.println(firstName);
        System.out.println(lastName);
        System.out.println(mobileNumber);
        System.out.println(age);
        System.out.println("My Name is "+ firstName + ", my age is " + age + " and my mobile number is " + mobileNumber);
        
        int cppMarks = 92;
        int javaMarks = 92;
        int reactMarks = 90;

        int totalMarks = cppMarks + javaMarks + reactMarks;
        float average = totalMarks / 3.0f;
         
        char grade;
        if (average >= 90) grade = 'A';
        else if (average >= 80) grade = 'B';
        else if (average >= 70) grade = 'C';
        else grade = 'D';
        
        System.out.println("my cpp marks: " + cppMarks);
        System.out.println("my java marks: " + javaMarks);
        System.out.println("my react marks " + reactMarks);
        System.out.println("Here is My Report Card");
        System.out.println("Total Marks    : " + totalMarks);
        System.out.printf("Average Marks  : %.2f\n", average);
        System.out.println("Grade          : " + grade);
        
    }
}

