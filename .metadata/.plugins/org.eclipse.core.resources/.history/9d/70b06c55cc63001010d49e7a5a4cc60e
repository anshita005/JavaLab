package wiprotraining;

public class VariableDemo {

    // Static variable
    static int num1 = 10;

    // Instance variable
    int num2 = 20;

    // Method to add two numbers and show all variables
    public void addNumbers() {
  
        int sum = number1 + number2;

        System.out.println("Static Variable (number1): " + number1);
        System.out.println("Instance Variable (number2): " + number2);
        System.out.println("Local Variable (sum): " + sum);
    }

    public static void main(String[] args) {
        // Create object to call instance method
        VariableDemo obj = new VariableDemo();
        obj.addNumbers();
    }
}
